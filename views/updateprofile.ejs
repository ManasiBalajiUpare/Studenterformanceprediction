<!DOCTYPE html>
<html>
<head>
  <title>Update Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <%- include("navbar.ejs") %>

  <style>
    body {
      background-color: #000;
      font-family: Arial, sans-serif;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: start;
      padding-top: 80px;
      margin: 0;
    }

    .card {
      position: relative;
      max-width: 450px;
      width: 100%;
      padding: 30px;
      background: #111;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 0 20px rgba(255,255,255,0.1);
      margin: 20px auto;
      animation: fadeIn 1s ease forwards;
    }

    /* Animated gradient border */
    .card::before,
    .card::after {
      content: "";
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(60deg, #ff3cac, #784ba0, #2b86c5, #00ffff, #ff3cac);
      background-size: 400% 400%;
      animation: rotate 10s linear infinite;
      z-index: 0;
    }

    .card::after {
      filter: blur(20px);
    }

    @keyframes rotate {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    @keyframes fadeIn {
      0% { opacity: 0; transform: translateY(-20px);}
      100% { opacity: 1; transform: translateY(0);}
    }

    .card-content {
      position: relative;
      z-index: 1;
    }

    .card-title {
      color: #fff;
      text-align: center;
      margin-bottom: 20px;
      font-weight: bold;
    }

    label {
      color: #fff;
    }

    input[type="text"],
    input[type="email"],
    input[type="file"],
    textarea {
      background: #111;
      border: 1px solid #fff;
      color: #fff;
      border-radius: 5px;
      padding: 10px;
      width: 100%;
      margin-bottom: 15px;
      box-sizing: border-box;
      font-size: 14px;
    }

    input[type="text"]:focus,
    input[type="email"]:focus,
    input[type="file"]:focus,
    textarea:focus {
      border-color: #ff3cac;
      box-shadow: 0 0 10px rgba(255, 60, 172, 0.5);
      outline: none;
    }

    input[type="file"]::-webkit-file-upload-button {
      background: #111;
      color: #fff;
      border: 1px solid #fff;
      border-radius: 5px;
      padding: 5px 10px;
      cursor: pointer;
    }
    input[type="file"]::-webkit-file-upload-button:hover {
      background: #ff3cac;
      border-color: #ff3cac;
      color: #fff;
    }

    .btn-primary {
      background: linear-gradient(90deg, #ff3cac, #784ba0, #2b86c5);
      border: none;
      width: 100%;
      margin-top: 10px;
    }

    a {
      color: #00ffff;
      text-decoration: none;
    }

    a:hover {
      text-shadow: 0 0 10px #00ffff;
      color: #ff3cac;
    }
  </style>
</head>
<body>

  <div class="card">
    <div class="card-content">
      <h3 class="card-title">Update Profile</h3>
      
      <% if (msg) { %>
        <div class="alert alert-warning text-center"><%= msg %></div>
      <% } %>

      <form action="/updateprofile" method="POST" enctype="multipart/form-data">
        <label>Full Name</label>
        <input type="text" name="name" value="<%= user.name %>" required>

        <label>Email</label>
        <input type="email" name="email" value="<%= user.email %>" required>

        <label>Contact Number</label>
        <input type="text" name="contact" value="<%= user.contact %>">

        <label>Address</label>
        <textarea name="address" rows="2"><%= user.address %></textarea>

        <label>Qualification</label>
        <input type="text" name="qualification" value="<%= user.qualification %>">

        <label>Course</label>
        <input type="text" name="course" value="<%= user.course %>">

        <label>Skills</label>
        <input type="text" name="skills" value="<%= user.skills %>">

        <label>Update Photo</label>
        <input type="file" name="photo">

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/viewprofile">Cancel</a>
      </form>
    </div>
  </div>

</body>
</html>
