<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>All Available Courses</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <style>
        body {
            background: #000;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            color: #fff;
        }
    </style>
</head>

<body>
    <%- include("navbar.ejs") %>
        <div class="container mt-5">
            <h2 class="text-center mb-4 text-white"> All Available Courses</h2>

            <div class="table-responsive"></div>
            <table class="table table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>Course Name</th>
                        <th>Description</th>
                        <th>Total Credits</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (courses.length > 0) { %>
                        <% courses.forEach((course,index) => { %>
                            <tr>
                                <td>
                                    <%= index+1%>
                                </td>
                                <td>
                                    <%= course.course_name %>
                                </td>
                                <td>
                                    <%= course.description %>
                                </td>
                                <td>
                                    <%= course.total_credits %>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center text-warning">No Courses Found</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
        <% if (typeof message !== 'undefined' && message) { %>
            <div id="msg" class="alert alert-success text-center">
                <%= message %>
            </div>
            <% } %>

                </div>
</body>

</html>