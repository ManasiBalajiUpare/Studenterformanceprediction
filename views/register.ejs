<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Registration</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <%- include("navbar.ejs") %>

  <style>
    body {
      background-color:yellow;
      font-family: Arial, sans-serif;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: start;
      padding-top: 80px;
      margin: 0;
    }

    .card {
      max-width: 450px;
      width: 100%;
      padding: 30px;
     background: linear-gradient(60deg, #ff3cac, #784ba0, #2b86c5, #00ffff, #ff3cac);
      border-radius: 45px solid black;
      margin: 20px auto;
    }

    .card-content {
      position: relative;
    }

    .card-title {
      color: #fff;
      text-align: center;
      margin-bottom: 20px;
      font-weight: bold;
    }

    label {
      color: #fff;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="file"],
    textarea,
    select {
      background:white;
      border: 1px solid black;
      color: blue;
      border-radius: 5px;
      padding: 10px;
      width: 100%;
      margin-bottom: 15px;
      box-sizing: border-box;
      font-size: 14px;
    }

    select {
      background:white;
      color:black;
    }

    input[type="file"]::-webkit-file-upload-button {
      background: linear-gradient(60deg, #ff3cac, #784ba0, #2b86c5, #00ffff, #ff3cac);
      color: #fff;
      border: 1px solid #fff;
      border-radius: 5px;
      padding: 5px 10px;
      cursor: pointer;
    }

    input[type="file"]::-webkit-file-upload-button:hover {
      background: #ff3cac;
      border-color: #ff3cac;
      color: #fff;
    }

    .btn-primary {
      background: linear-gradient(90deg, white, #784ba0,black );
      border: none;
      width: 100%;
      margin-top: 10px;
    }

    a {
      color: #00ffff;
      text-decoration: none;
    }

    a:hover {
      text-shadow: 0 0 10px #00ffff;
      color: #ff3cac;
    }
  </style>
</head>

<body>

  <div class="card">
    <div class="card-content">
      <h3 class="card-title">User Registration</h3>

      <% if (msg) { %>
        <div class="alert alert-warning text-center"><%= msg %></div>
      <% } %>

      <form action="/register" method="POST" enctype="multipart/form-data">

        <label>Full Name</label>
        <input type="text" name="name" placeholder="Enter your name" required>

        <label>Email</label>
        <input type="email" name="email" placeholder="Enter your email" required>

        <label>Password</label>
        <input type="password" name="password" placeholder="Enter your password" required>

        <label>Confirm Password</label>
        <input type="password" name="confirm_password" placeholder="Confirm your password" required>

        <label>Address</label>
        <textarea name="address" placeholder="Enter your address" rows="2"></textarea>

        <label>Contact Number</label>
        <input type="text" name="contact" placeholder="Enter your contact number">

        <label>Qualification</label>
        <input type="text" name="qualification" placeholder="Enter your qualification">

        <label>Course</label>
        <select name="course" required>
          <option value="">-- Select Your Course --</option>
          <% courses.forEach(function(course) { %>
            <option value="<%= course.course_name %>"><%= course.course_name %></option>
          <% }); %>
        </select>

        <label>Skills</label>
        <input type="text" name="skills" placeholder="Enter your skills">

        <label>Upload Photo</label>
        <input type="file" name="photo">

        <button type="submit" class="btn btn-primary">Register</button>

        <% if (showLoginLink) { %>
          <p class="text-center mt-3 text-white">
            Already have an account? <a href="/login" class="text-info">Login here</a>
          </p>
        <% } %>

      </form>
    </div>
  </div>

</body>

</html>
