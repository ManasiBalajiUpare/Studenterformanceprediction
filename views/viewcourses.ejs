<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>All Courses</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <style>
        body {
            background: #000;
            font-family: Arial, sans-serif;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }
        
        h2 {
            text-align: center;
            color: #fff;
            margin-bottom: 25px;
        }
        
        input[type="text"] {
            background: #111;
            border: 1px solid #fff;
            color: #fff;
            border-radius: 5px;
            padding: 10px;
            width: 100%;
            margin-bottom: 15px;
            box-sizing: border-box;
        }
        
        input:focus {
            border-color: #ff3cac;
            box-shadow: 0 0 10px rgba(255, 60, 172, 0.5);
            outline: none;
        }
        
        .table thead {
            background-color: #333;
            color: #fff;
        }
    </style>
</head>

<body>
    <%- include("navbar.ejs") %>

        <div class="container mt-5">
            <h2>View All Courses</h2>

            <div class="mb-3">
                <input type="text" id="searchBox" class="form-control" placeholder="Search courses by name...">
            </div>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Course ID</th>
                        <th>Course Name</th>
                        <th>Description</th>
                        <th>Total Credits</th>
                        <th>Delete</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody id="courseTable">
                    <% courses.forEach(course => { %>
                        <tr>
                            <td>
                                <%= course.course_id %>
                            </td>
                            <td>
                                <%= course.course_name %>
                            </td>
                            <td>
                                <%= course.description %>
                            </td>
                            <td>
                                <%= course.total_credits %>
                            </td>
                            <td>
                                <form action="/deletecourse/<%= course.course_id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to delete this course?')">Delete</button>
                                </form>
                            </td>
                            <td>
                                <a href="/editcourse/<%= course.course_id %>" class="btn btn-primary btn-sm">Update</a>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <!-- Message alert under the table -->
            <% if (typeof message !== 'undefined' && message) { %>
                <div id="msg" class="alert alert-success text-center mt-3">
                    <%= message %>
                </div>
                <script>
                    setTimeout(function() {
                        var msgDiv = document.getElementById("msg");
                        if (msgDiv) {
                            msgDiv.style.transition = "opacity 1s ease";
                            msgDiv.style.opacity = 0;
                            setTimeout(() => msgDiv.style.display = "none", 1000);
                        }
                    }, 1000); // hide after 3 seconds
                </script>
                <% } %>
        </div>

        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const searchBox = document.getElementById("searchBox");
                const courseTable = document.getElementById("courseTable");

                searchBox.addEventListener("keyup", async() => {
                    const query = searchBox.value.trim();

                    try {
                        const res = await fetch(`/courses/search?query=${encodeURIComponent(query)}`);
                        const courses = await res.json();

                        courseTable.innerHTML = "";

                        if (!courses || courses.length === 0) {
                            courseTable.innerHTML = `<tr><td colspan="6" class="text-center">No courses found</td></tr>`;
                            return;
                        }

                        courses.forEach(course => {
                            const row = document.createElement("tr");
                            row.innerHTML = `
                            <td>${course.course_id}</td>
                            <td>${course.course_name}</td>
                            <td>${course.description || ""}</td>
                            <td>${course.total_credits}</td>
                            <td>
                                <form action="/deletecourse/${course.course_id}" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to delete this course?')">Delete</button>
                                </form>
                            </td>
                            <td>
                                <a href="/editcourse/${course.course_id}" class="btn btn-primary btn-sm">Update</a>
                            </td>
                        `;
                            courseTable.appendChild(row);
                        });
                    } catch (err) {
                        console.error("Search error:", err);
                    }
                });
            });
        </script>
</body>

</html>