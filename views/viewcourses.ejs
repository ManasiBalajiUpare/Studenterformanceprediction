<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>All Courses</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script type='text/javascript' src="ajax.js"></script>
    <style>
        body {
            background: #000;
            font-family: Arial, sans-serif;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            /* center horizontally */
            align-items: center;
            /* center vertically */
        }
        
        .card {
            position: relative;
            max-width: 500px;
            width: 100%;
            padding: 30px;
            background: #111;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
            animation: fadeIn 1s ease forwards;
        }
        /* Animated gradient border */
        
        .card::before,
        .card::after {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(60deg, #ff3cac, #784ba0, #2b86c5, #00ffff, #ff3cac);
            background-size: 400% 400%;
            animation: rotate 10s linear infinite;
            z-index: 0;
        }
        
        .card::after {
            filter: blur(20px);
        }
        
        @keyframes rotate {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }
        
        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .card-content {
            position: relative;
            z-index: 1;
        }
        
        h2 {
            text-align: center;
            color: #fff;
            margin-bottom: 25px;
        }
        
        label {
            color: #fff;
        }
        
        input[type="text"],
        input[type="number"],
        textarea {
            background: #111;
            border: 1px solid #fff;
            color: #fff;
            border-radius: 5px;
            padding: 10px;
            width: 100%;
            margin-bottom: 15px;
            box-sizing: border-box;
            font-size: 14px;
            transition: all 0.3s ease;
        }
        
        input:focus,
        textarea:focus {
            border-color: #ff3cac;
            box-shadow: 0 0 10px rgba(255, 60, 172, 0.5);
            outline: none;
        }
        
        .btn-primary {
            background: linear-gradient(90deg, #ff3cac, #784ba0, #2b86c5);
            border: none;
            width: 100%;
            margin-top: 10px;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
        
        .btn-secondary {
            width: 100%;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <%- include("navbar.ejs") %>
        <div class="container mt-5">
            <h2 class="mb-4 text-center"> View All Courses</h2>


            <!-- ðŸ” Search Form-->
            <form class="form-inline mb-3 justify-content-center" action="/searchCourseByName" method="GET">
                <input type="text" name="course_name" class="form-control mr-2 w-75" onkeyup="searchCourse(this.value)" placeholder="Search Course Name..." required>
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>


            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Course ID</th>
                        <th>Course Name</th>
                        <th>Description</th>
                        <th>Total Credits</th>
                        <th>Delete</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach(course => { %>
                        <tr>
                            <td>
                                <%= course.course_id %>
                            </td>
                            <td>
                                <%= course.course_name %>
                            </td>
                            <td>
                                <%= course.description %>
                            </td>
                            <td>
                                <%= course.total_credits %>
                            </td>
                            <td>
                                <form action="/deletecourse/<%= course.course_id %>" method="POST" style="display:inline;">

                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to delete this course?')">
                                        Delete
                        </button>
                                </form>


                            </td>
                            <td>

                                <a href="/editcourse/<%= course.course_id %>" class="btn btn-primary btn-sm">Update</a>
                            </td>

                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <% if (typeof message !== 'undefined' && message) { %>
                <div id="msg" class="alert alert-success text-center">
                    <%= message %>
                </div>
                <script>
                    (function() {
                        var msgDiv = document.getElementById("msg");
                        if (msgDiv) {
                            setTimeout(function() {
                                msgDiv.style.transition = "opacity 1s ease";
                                msgDiv.style.opacity = "0";
                                setTimeout(function() {
                                    msgDiv.style.display = "none";
                                }, 1000);
                            }, 1000); // 10 seconds
                        }
                    })();
                </script>
                <% } %>

        </div>
</body>

</html>